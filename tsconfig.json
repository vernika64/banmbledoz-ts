// tsconfig.json
{
  "compilerOptions": {
    "target": "es2020",               // Or a newer ES version, e.g., "es2020"
    "module": "commonjs",             // Or "esnext" if you're using ES modules
    "outDir": "./dist",               // Output directory for compiled JavaScript
    "rootDir": "./src",               // Source directory for TypeScript files
    "strict": true,                   // Enable all strict type-checking options
    "esModuleInterop": true,          // Allow default imports from modules with no default export
    "skipLibCheck": true,             // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
  },
  "include": ["src/**/*.ts"],         // Include all .ts files in the src directory
  "exclude": ["node_modules"]         // Exclude node_modules
}